[Unit]
Description= Thermostat App for Matter IoT
After=network.target avahi-daemon.service dbus.service
Requires=avahi-daemon.service

[Service]
Type=simple
ExecStartPre=/bin/rm -f /var/run/thermostat-app.pid
ExecStart=/usr/bin/thermostat-app
Restart=on-failure
RestartSec=3
Environment=CHIP_DEVICE_CONFIG_WIFI_STATION_IF_NAME="wlan0"
Environment=CHIP_DEVICE_CONFIG_LINUX_DHCPC_CMD="udhcpc -b -i %s"
StandardOutput=journal
StandardError=journal
LimitNOFILE=65536
PIDFile=/var/run/thermostat-app.pid

[Install]
WantedBy=multi-user.target
