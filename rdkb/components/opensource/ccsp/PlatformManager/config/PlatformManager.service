[Unit]
Description=PlatformManager service
ConditionPathExists=/nvram/secure
After=securemount.service
[Service]
Type=forking
WorkingDirectory=/usr/ccsp/platformmanager
Environment="LOG4C_RCPATH=/etc"
EnvironmentFile=/etc/device.properties
ExecStart=/usr/bin/platform_manager
ExecStop=/bin/sh -c 'echo "`date`: Stopping/Restarting PlatformManager" >> ${PROCESS_RESTART_LOG}'
Restart=always
StandardOutput=syslog+console
[Install]
WantedBy=multi-user.target
